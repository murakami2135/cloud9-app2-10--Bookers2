<div class="col-md-3">
    <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
     <tbody>
      <tr>
       <th>name</th>
       <th class="profile-name"><%= user.name %></th>
      </tr>
      <tr>
       <th>introduction</th>
       <th class="profile-introduction"><%= user.introduction %></th>
      </tr>
     </tbody>
    </table>
    <%= link_to "",edit_user_path(user[:id]),class: "btn btn-outline-secondary btn-block fas fa-user-cog"  %>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: @bookers, local:true do |f| %>
    <div class="form-group">
     <label for="book_title">Title</label>
     <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
     <label for="book_body">Opinion</label>
     <%= f.text_area :body, class:"form-control" %>
    </div>
    <div class="book_new">
     <%= f.submit 'Create Book', class:"btn btn-success" %>
    </div>
   </div>
   <% end %>