<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <div id='error_explanation'>
       <h3><%= @user.errors.count %>error prohibited this obj from being saved:<% end %></h3>
       <ul>
         <% @user.errors.full_messages.each do |message| %>
         <li>
           <%= message %>
           <% end %>
         </li>
       </ul>
      </div>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="user-name">Name</label>
        <div class="field_with_errors">
          <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName"%>
      　</div>
      </div>
      <div class="form-group">
        <label for="user_image">image</label>
        <div class="form-control-file user_image">
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
      </div>
      <div class="form-group">
        <ladbl fol="user_introduction">introduction</ladbl>
      <div class="introduction">
        <%= f.text_area :introduction, class:"form-control" %>
      </div>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary"  %>
      </div>
      <% end %>
    </div>
  </div>
</div>
